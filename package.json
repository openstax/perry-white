{
  "name": "perry-white",
  "version": "0.4.0",
  "subversion": "1",
  "description": "Rich text editor built with ProseMirror plus React",
  "main": "dist/index.js",
  "module": "dist/perry-white.module.js",
  "source": "src/index.ts",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:openstax/perry-white.git"
  },
  "scripts": {
    "build:clean": "rm -rf dist/ && rm -f perry-white*.*.*.tgz",
    "build:tsc": "tsc",
    "build:css": "sass scss/editor.scss > dist/editor.css && sass scss/rendered-html.scss > dist/rendered-html.css; ",
    "build:demo": "NODE_ENV=production webpack-cli",
    "build:bundle": "microbundle --no-compress --format modern,cjs  --jsx React.createElement",
    "build:release": "NODE_ENV=production node scripts/build-release.js",
    "lint:css": "stylelint \"**/*.scss\"",
    "lint:js": "eslint \"**/*.{tsx,tsx}\"",
    "start": "NODE_ENV=development webpack-cli serve",
    "deploy:demo": "run-s build:demo gh-pages:publish",
    "gh-pages:publish": "gh-pages -d demo/build",
    "prepare": "run-s build:release"
  },
  "files": [
    "dist/*",
    "scss/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/plugin-proposal-do-expressions": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-sent": "^7.10.4",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.4",
    "@babel/plugin-proposal-throw-expressions": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-parameters": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.12.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/classnames": "^2.2.11",
    "@types/prosemirror-state": "^1.2.5",
    "@types/prosemirror-view": "^1.16.1",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "classnames": "*",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "cors": "^2.8.5",
    "css-loader": "^3.6.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.20.3",
    "express": "^4.17.1",
    "file-loader": "^6.1.0",
    "flatted": "^3.0.4",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "formidable": "^1.2.2",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.1.0",
    "html-loader": "^1.1.0",
    "html-webpack-inline-source-plugin": "1.0.0-beta.2",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "invariant": "2.2.4",
    "jquery": "^3.5.1",
    "katex": "^0.11.1",
    "lint-staged": "^10.2.11",
    "microbundle": "^0.12.4",
    "mv": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.0",
    "react-dom": "^17.0.1",
    "react-refresh": "^0.9.0",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^1.3.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-csstree-validator": "^1.9.0",
    "stylelint-scss": "^3.18.0",
    "terser-webpack-plugin": "^3.1.0",
    "ts-loader": "^8.0.11",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "write-file-webpack-plugin": "4.5.1"
  },
  "dependencies": {
    "browserkeymap": "2.0.2",
    "color": "3.1.2",
    "mathlive": "^0.59.0",
    "nullthrows": "1.1.1",
    "prosemirror-collab": "1.2.2",
    "prosemirror-commands": "1.1.4",
    "prosemirror-dev-tools": "3.0.2",
    "prosemirror-dropcursor": "1.3.2",
    "prosemirror-gapcursor": "1.1.5",
    "prosemirror-history": "1.1.3",
    "prosemirror-inputrules": "^1.1.2",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-model": "^1.11.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-tables": "^1.1.1",
    "prosemirror-transform": "^1.2.7",
    "prosemirror-utils": "0.9.6",
    "prosemirror-view": "^1.15.2",
    "query-string": "^6.13.7",
    "react-mathlive": "^3.0.5-preview.1",
    "resize-observer-polyfill": "1.5.1",
    "smooth-scroll-into-view-if-needed": "^1.1.28",
    "stable": "0.1.8",
    "utility-types": "^3.10.0",
    "uuid": "^8.2.0",
    "webfontloader": "1.6.28"
  },
  "peerDependencies": {
    "classnames": "*",
    "react": "^16.0",
    "react-dom": "^16.0"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module-grouping"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{css,js,json}": [
      "git add"
    ]
  }
}
